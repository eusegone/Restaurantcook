<%= form_for [@restaurant, @recipe] do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prevent this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.text_area :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <%= f.fields_for :quantities do |i| %>
      <div class="field">
        <%= f.label :quantity %><br>
        <%= i.text_field :quantity %>
        <% select_tag(:quantities, options_for_select([['Kg', 1], ['grams', 2],['ml', 2]]))%>
         <select name="quantity">
           <option value="Kg">kg</option>
           <option value="grams">grams</option>
           <option value = "ml">ml</option>
         </select>
      </div>
  <% end %>

  <%= f.fields_for :quantities do |i| %>
      <div class="field">
        <%= f.label :ingredient_id %>
        <%= i.text_field :ingredient_id %>
      </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
