<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    <%= link_to image_tag(recipe.image), restaurant_recipe_path(recipe.restaurant.id, recipe) %>
    <div class="caption">
      <h3><%= recipe.title %></h3>
      <p>
        <%= link_to "View", restaurant_recipe_path(recipe.restaurant.id, recipe), class: "btn btn-primary" %>
        <%= link_to 'Edit', edit_restaurant_recipe_path(recipe.restaurant.id, recipe), class: "btn btn-primary"  %>
      </p>
    </div>
  </div>
</div>